{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,

    "outDir": "./dist",
    "inlineSourceMap": true,
    "declaration": true,

    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".vscode",
    ".git",
    "dist",
    "node_modules",

    "src/**/testData",
    "src/**/*.spec.ts"
  ]
}
