{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,

    "outDir": "./build",
    "inlineSourceMap": true,
    "declaration": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    ".vscode",
    ".git",
    "build",
    "node_modules",

    "testData",
    "**/*.spec.ts"
  ]
}
